<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bitcard.cosc431.bitcard.UserAreaActivity">

    <Button
        android:id="@+id/button7"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="20dp"
        android:background="@android:drawable/bottom_bar"
        android:fontFamily="serif"
        android:onClick="clickOnSettings"
        android:text="@string/action_settings"
        android:textSize="24sp"
        android:typeface="serif"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="264dp"
        android:background="@android:drawable/bottom_bar"
        android:fontFamily="serif"
        android:onClick="clickOnHistory"
        android:text="@string/AccountHistory"
        android:textSize="24sp"
        android:typeface="serif"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="36dp"
        android:background="@android:drawable/bottom_bar"
        android:fontFamily="serif"
        android:onClick="clickOnWallet"
        android:text="@string/wallet"
        android:textSize="24sp"
        android:typeface="serif"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="148dp"
        android:background="@android:drawable/bottom_bar"
        android:fontFamily="serif"
        android:onClick="clickOnPrice"
        android:text="@string/price"
        android:textSize="24sp"
        android:typeface="serif"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp" />
</android.support.constraint.ConstraintLayout>
